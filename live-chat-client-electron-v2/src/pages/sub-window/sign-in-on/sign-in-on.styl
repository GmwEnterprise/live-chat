#sign-in-on
  padding 20px 50px

  #title
    span
      font-size 18px
      line-height 2.5em

  #content-input
    width 100%

  #content-submit
    width 100%
    margin-top 2em
    display flex
    justify-content flex-end
    align-items baseline

    #registration-link
      color $gray-3
      margin-right auto
      
      &:hover
        text-decoration underline
        cursor pointer

    .my-btn-text
      background-color inherit 
      border 0
      color $gray-3

      &:focus
        outline none

      &:hover
        text-decoration underline
        cursor pointer

    .my-btn
      background-color $green-1
      color white
      box-sizing border-box
      width 60px
      height 35px
      border 0
      margin-left 10px
      border-radius 3px
      transition background-color .2s

      &:focus
        outline none

      &:hover
        cursor pointer
        background-color $green-2

#qr-code-wrapper
  width 240px
  height 240px
  overflow hidden
  margin 20px auto 0

  img
    width 100%
    height 100%
